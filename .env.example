# ============================================================================
# CourseSmith AI - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your values

# ============================================================================
# SUPABASE CONFIGURATION (Required for API key retrieval)
# ============================================================================
# The OpenAI API key is stored in Supabase 'secrets' table
# This keeps the API key secure and out of the source code

# Your Supabase project URL (e.g., https://your-project.supabase.co)
SUPABASE_URL=your_supabase_url_here

# Your Supabase anon/public key or service role key
SUPABASE_KEY=your_supabase_key_here

# ============================================================================
# SUPABASE TABLE SETUP
# ============================================================================
# Create a 'secrets' table in your Supabase database with:
#
# CREATE TABLE secrets (
#     id SERIAL PRIMARY KEY,
#     name VARCHAR(255) UNIQUE NOT NULL,
#     value TEXT NOT NULL
# );
#
# Then insert your OpenAI API key:
# INSERT INTO secrets (name, value) VALUES ('OPENAI_API_KEY', 'sk-your-key-here');
# ============================================================================

# ============================================================================
# OPENAI API KEY (Only used if NOT using Supabase)
# ============================================================================
# If you prefer environment variable over Supabase, uncomment below:
# OPENAI_API_KEY=your_openai_api_key_here
